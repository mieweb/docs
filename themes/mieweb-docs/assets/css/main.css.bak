/* Main CSS entry point for MIE Documentation */
/* Tailwind CSS 4 base styles */
@import "tailwindcss";

/* ============================================
   Brand-Specific Theme Overrides
   ============================================ */

/* WebChart Brand - Orange (#f5841f) */
:root {
  /* Primary Color Scale - WebChart Orange */
  --mieweb-primary-50: #fff7ed;
  --mieweb-primary-100: #ffedd5;
  --mieweb-primary-200: #fed7aa;
  --mieweb-primary-300: #fdba74;
  --mieweb-primary-400: #fb923c;
  --mieweb-primary-500: #f5841f;
  --mieweb-primary-600: #ea580c;
  --mieweb-primary-700: #c2410c;
  --mieweb-primary-800: #9a3412;
  --mieweb-primary-900: #7c2d12;
  --mieweb-primary-950: #431407;

  /* Ring & Focus */
  --mieweb-ring: #f5841f;

  /* Typography - Inter for WebChart */
  --mieweb-font-sans: 'Inter', ui-sans-serif, system-ui, sans-serif;
  
  /* Sidebar specific tokens */
  --sidebar-bg: var(--mieweb-background);
  --sidebar-foreground: var(--mieweb-foreground);
  --sidebar-muted: var(--mieweb-muted-foreground);
  --sidebar-border: var(--mieweb-border);
  --sidebar-active-bg: var(--mieweb-primary-50);
  --sidebar-active-text: var(--mieweb-primary-700);
  --sidebar-hover-bg: var(--mieweb-muted);
}

/* Dark mode sidebar */
[data-theme='dark'] {
  --sidebar-active-bg: color-mix(in srgb, var(--mieweb-primary-500) 15%, transparent);
  --sidebar-active-text: var(--mieweb-primary-400);
  --sidebar-hover-bg: var(--mieweb-muted);
}

/* Enterprise Health Brand - Burgundy (#6e2b68) */
.brand-eh {
  --mieweb-primary-50: #fdf5fc;
  --mieweb-primary-100: #faeaf8;
  --mieweb-primary-200: #f5d4f0;
  --mieweb-primary-300: #edb3e4;
  --mieweb-primary-400: #e086d2;
  --mieweb-primary-500: #c95ab8;
  --mieweb-primary-600: #6e2b68;
  --mieweb-primary-700: #5e2559;
  --mieweb-primary-800: #4e1f4a;
  --mieweb-primary-900: #42193d;
  --mieweb-primary-950: #280e25;

  --mieweb-ring: #6e2b68;
  --mieweb-font-sans: 'Jost', ui-sans-serif, system-ui, sans-serif;
  
  --sidebar-active-bg: var(--mieweb-primary-50);
  --sidebar-active-text: var(--mieweb-primary-700);
}

.brand-eh[data-theme='dark'] {
  --sidebar-active-bg: color-mix(in srgb, var(--mieweb-primary-500) 15%, transparent);
  --sidebar-active-text: var(--mieweb-primary-400);
}

/* Import Jost font for Enterprise Health */
@import url('https://fonts.googleapis.com/css2?family=Jost:ital,wght@0,100..900;1,100..900&display=swap');

/* ============================================
   Layout - Sidebar & Main Content
   ============================================ */

#sidebar {
  background-color: var(--sidebar-bg);
  border-color: var(--sidebar-border);
  top: 4rem; /* 64px - height of header */
}

/* Mobile: hide sidebar by default */
@media (max-width: 1023px) {
  #sidebar {
    transform: translateX(-100%);
  }
  
  #sidebar.open {
    transform: translateX(0);
  }
}

/* Desktop: always show sidebar */
@media (min-width: 1024px) {
  #sidebar {
    transform: translateX(0);
  }
  
  #main-content {
    margin-left: 16rem;
  }
}

/* ============================================
   Button Styles - Following mieweb/ui patterns
   ============================================ */

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  font-weight: 600;
  transition: all 0.2s;
  border-radius: var(--mieweb-radius-lg, 0.5rem);
}

.btn:focus-visible {
  outline: 2px solid var(--mieweb-ring);
  outline-offset: 2px;
}

.btn:disabled {
  pointer-events: none;
  opacity: 0.5;
}

.btn:active:not(:disabled) {
  transform: scale(0.98);
}

.btn-primary {
  background-color: var(--mieweb-primary-600);
  color: white;
}

.btn-primary:hover {
  background-color: var(--mieweb-primary-700);
}

.btn-secondary {
  background-color: var(--mieweb-muted);
  color: var(--mieweb-foreground);
  border: 1px solid var(--mieweb-border);
}

.btn-secondary:hover {
  background-color: color-mix(in srgb, var(--mieweb-muted) 80%, var(--mieweb-foreground) 5%);
}

.btn-ghost {
  background-color: transparent;
  color: var(--mieweb-muted-foreground);
}

.btn-ghost:hover {
  background-color: var(--mieweb-muted);
  color: var(--mieweb-foreground);
}

.btn-sm {
  height: 2rem;
  padding: 0 0.75rem;
  font-size: 0.875rem;
  border-radius: var(--mieweb-radius-md, 0.375rem);
}

.btn-md {
  height: 2.5rem;
  padding: 0 1rem;
  font-size: 1rem;
}

.btn-lg {
  height: 3rem;
  padding: 0 1.5rem;
  font-size: 1.125rem;
}

.btn-icon {
  height: 2.5rem;
  width: 2.5rem;
  padding: 0;
}

/* ============================================
   Form Input Styles
   ============================================ */

.form-input {
  border-radius: var(--mieweb-radius-md, 0.375rem);
  border: 1px solid var(--mieweb-input);
  background-color: var(--mieweb-background);
  padding: 0.5rem 0.75rem;
  font-size: 0.875rem;
  color: var(--mieweb-foreground);
  transition: border-color 0.15s, box-shadow 0.15s;
}

.form-input::placeholder {
  color: var(--mieweb-muted-foreground);
}

.form-input:focus {
  outline: none;
  border-color: var(--mieweb-primary-500);
  box-shadow: 0 0 0 3px color-mix(in srgb, var(--mieweb-primary-500) 20%, transparent);
}

.form-input:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.form-input.error {
  border-color: var(--mieweb-destructive);
}

.form-input.error:focus {
  box-shadow: 0 0 0 3px color-mix(in srgb, var(--mieweb-destructive) 20%, transparent);
}

/* ============================================
   Card Styles - Following mieweb/ui patterns
   ============================================ */

.card {
  border-radius: var(--mieweb-radius-xl, 0.75rem);
  background-color: var(--mieweb-card);
  color: var(--mieweb-card-foreground);
  border: 1px solid var(--mieweb-border);
  position: relative;
  overflow: hidden;
  box-shadow: var(--mieweb-shadow-card, 0 1px 3px 0 rgb(0 0 0 / 0.1));
}

.card-interactive {
  transition: all 0.2s;
  cursor: pointer;
}

.card-interactive:hover {
  box-shadow: var(--mieweb-shadow-dropdown, 0 4px 6px -1px rgb(0 0 0 / 0.1));
  border-color: var(--mieweb-primary-200);
}

[data-theme='dark'] .card-interactive:hover {
  border-color: var(--mieweb-primary-800);
}

/* ============================================
   Header Styles
   ============================================ */

.header {
  background-color: color-mix(in srgb, var(--mieweb-background) 95%, transparent);
  backdrop-filter: blur(8px);
  -webkit-backdrop-filter: blur(8px);
}

@supports not (backdrop-filter: blur(8px)) {
  .header {
    background-color: var(--mieweb-background);
  }
}

/* ============================================
   Sidebar Navigation
   ============================================ */

.sidebar-item {
  display: flex;
  align-items: center;
  padding: 0.5rem 0.75rem;
  border-radius: var(--mieweb-radius-md, 0.375rem);
  font-size: 0.875rem;
  color: var(--sidebar-foreground);
  text-decoration: none;
  transition: background-color 0.15s, color 0.15s;
}

.sidebar-item:hover {
  background-color: var(--sidebar-hover-bg);
}

.sidebar-item.active,
.sidebar-item[data-active="true"] {
  background-color: var(--sidebar-active-bg);
  color: var(--sidebar-active-text);
  font-weight: 500;
}

.sidebar-nav-children {
  border-left: 1px solid var(--mieweb-border);
  margin-left: 0.75rem;
  padding-left: 0.5rem;
}

.sidebar-toggle svg {
  transition: transform 0.2s ease;
}

.sidebar-toggle[aria-expanded="true"] svg {
  transform: rotate(90deg);
}

/* ============================================
   Breadcrumbs
   ============================================ */

.breadcrumb {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 0.375rem;
  font-size: 0.875rem;
  color: var(--mieweb-muted-foreground);
}

.breadcrumb-link {
  color: var(--mieweb-muted-foreground);
  text-decoration: none;
  transition: color 0.15s;
}

.breadcrumb-link:hover {
  color: var(--mieweb-foreground);
}

.breadcrumb-current {
  color: var(--mieweb-foreground);
  font-weight: 500;
}

/* ============================================
   Table of Contents
   ============================================ */

.toc ul {
  list-style: none;
  padding-left: 0;
  margin: 0;
}

.toc li {
  margin: 0.375rem 0;
}

.toc li ul {
  padding-left: 1rem;
  margin-top: 0.25rem;
  border-left: 1px solid var(--mieweb-border);
}

.toc a {
  display: block;
  color: var(--mieweb-muted-foreground);
  text-decoration: none;
  padding: 0.25rem 0.5rem;
  border-radius: var(--mieweb-radius-sm, 0.25rem);
  transition: color 0.15s, background-color 0.15s;
}

.toc a:hover {
  color: var(--mieweb-foreground);
  background-color: var(--mieweb-muted);
}

.toc a.active {
  color: var(--mieweb-primary-600);
  background-color: var(--mieweb-primary-50);
}

[data-theme='dark'] .toc a.active {
  color: var(--mieweb-primary-400);
  background-color: color-mix(in srgb, var(--mieweb-primary-500) 15%, transparent);
}

/* ============================================
   Search Modal
   ============================================ */

.search-modal-backdrop {
  background-color: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(4px);
  -webkit-backdrop-filter: blur(4px);
}

.search-result {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  padding: 0.75rem;
  border-radius: var(--mieweb-radius-lg, 0.5rem);
  text-decoration: none;
  transition: background-color 0.15s;
}

.search-result:hover,
.search-result.selected {
  background-color: var(--mieweb-muted);
}

.search-result-title {
  font-weight: 500;
  color: var(--mieweb-foreground);
}

.search-result-summary {
  font-size: 0.875rem;
  color: var(--mieweb-muted-foreground);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.search-highlight {
  background-color: var(--mieweb-primary-100);
  color: var(--mieweb-primary-900);
  padding: 0.125rem 0.25rem;
  border-radius: var(--mieweb-radius-sm, 0.25rem);
}

[data-theme='dark'] .search-highlight {
  background-color: color-mix(in srgb, var(--mieweb-primary-500) 30%, transparent);
  color: var(--mieweb-primary-100);
}

/* ============================================
   Prose/Markdown Content
   ============================================ */

.prose {
  --prose-body: var(--mieweb-foreground);
  --prose-headings: var(--mieweb-foreground);
  --prose-links: var(--mieweb-primary-600);
  --prose-bold: var(--mieweb-foreground);
  --prose-counters: var(--mieweb-muted-foreground);
  --prose-bullets: var(--mieweb-muted-foreground);
  --prose-hr: var(--mieweb-border);
  --prose-quotes: var(--mieweb-foreground);
  --prose-quote-borders: var(--mieweb-primary-500);
  --prose-captions: var(--mieweb-muted-foreground);
  --prose-code: var(--mieweb-foreground);
  --prose-pre-code: var(--mieweb-foreground);
  --prose-pre-bg: var(--mieweb-muted);
  --prose-th-borders: var(--mieweb-border);
  --prose-td-borders: var(--mieweb-border);
}

.prose img {
  border-radius: var(--mieweb-radius-lg, 0.5rem);
  border: 1px solid var(--mieweb-border);
  box-shadow: var(--mieweb-shadow-card, 0 1px 3px 0 rgb(0 0 0 / 0.1));
}

.prose a {
  color: var(--mieweb-primary-600);
  font-weight: 500;
  text-decoration: none;
  transition: color 0.15s;
}

.prose a:hover {
  color: var(--mieweb-primary-700);
  text-decoration: underline;
}

[data-theme='dark'] .prose a {
  color: var(--mieweb-primary-400);
}

[data-theme='dark'] .prose a:hover {
  color: var(--mieweb-primary-300);
}

.prose code:not(pre code) {
  background-color: var(--mieweb-muted);
  padding: 0.125rem 0.375rem;
  border-radius: var(--mieweb-radius-sm, 0.25rem);
  font-family: var(--mieweb-font-mono);
  font-size: 0.875em;
  font-weight: 500;
}

.prose pre {
  background-color: var(--mieweb-muted);
  border: 1px solid var(--mieweb-border);
  border-radius: var(--mieweb-radius-lg, 0.5rem);
  overflow-x: auto;
}

.prose table {
  width: 100%;
  border-collapse: collapse;
  overflow: hidden;
  border-radius: var(--mieweb-radius-lg, 0.5rem);
  border: 1px solid var(--mieweb-border);
}

.prose th {
  background-color: var(--mieweb-muted);
  padding: 0.75rem 1rem;
  text-align: left;
  font-weight: 600;
  border-bottom: 1px solid var(--mieweb-border);
}

.prose td {
  padding: 0.75rem 1rem;
  border-bottom: 1px solid var(--mieweb-border);
}

.prose tr:last-child td {
  border-bottom: none;
}

.prose blockquote {
  border-left: 4px solid var(--mieweb-primary-500);
  background-color: color-mix(in srgb, var(--mieweb-primary-50) 50%, transparent);
  padding: 1rem 1.5rem;
  border-radius: 0 var(--mieweb-radius-lg, 0.5rem) var(--mieweb-radius-lg, 0.5rem) 0;
  font-style: normal;
}

[data-theme='dark'] .prose blockquote {
  background-color: color-mix(in srgb, var(--mieweb-primary-500) 10%, transparent);
}

.prose hr {
  border-color: var(--mieweb-border);
  margin: 2rem 0;
}

.prose h2,
.prose h3,
.prose h4 {
  scroll-margin-top: 5rem;
}

.prose h2 {
  border-bottom: 1px solid var(--mieweb-border);
  padding-bottom: 0.5rem;
  margin-top: 2rem;
}

/* ============================================
   Callout/Alert Boxes
   ============================================ */

.callout {
  padding: 1rem 1.25rem;
  border-radius: var(--mieweb-radius-lg, 0.5rem);
  border-left: 4px solid;
  margin: 1.5rem 0;
}

.callout-info {
  background-color: #eff6ff;
  border-left-color: #3b82f6;
  color: #1e40af;
}

[data-theme='dark'] .callout-info {
  background-color: color-mix(in srgb, #3b82f6 15%, transparent);
  color: #93c5fd;
}

.callout-warning {
  background-color: #fffbeb;
  border-left-color: #f59e0b;
  color: #92400e;
}

[data-theme='dark'] .callout-warning {
  background-color: color-mix(in srgb, #f59e0b 15%, transparent);
  color: #fcd34d;
}

.callout-tip {
  background-color: #f0fdf4;
  border-left-color: #22c55e;
  color: #166534;
}

[data-theme='dark'] .callout-tip {
  background-color: color-mix(in srgb, #22c55e 15%, transparent);
  color: #86efac;
}

.callout-note {
  background-color: var(--mieweb-muted);
  border-left-color: var(--mieweb-muted-foreground);
  color: var(--mieweb-foreground);
}

/* ============================================
   Toast Notifications
   ============================================ */

.toast {
  position: fixed;
  bottom: 1rem;
  right: 1rem;
  z-index: 100;
  transform: translateY(100%);
  opacity: 0;
  transition: transform 0.3s ease, opacity 0.3s ease;
}

.toast:not(.hidden) {
  transform: translateY(0);
  opacity: 1;
}

.toast-content {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.875rem 1rem;
  border-radius: var(--mieweb-radius-lg, 0.5rem);
  background-color: var(--mieweb-card);
  border: 1px solid var(--mieweb-border);
  box-shadow: var(--mieweb-shadow-dropdown, 0 4px 6px -1px rgb(0 0 0 / 0.1));
}

.toast-icon {
  flex-shrink: 0;
}

.toast-icon-success {
  color: var(--mieweb-success, #22c55e);
}

.toast-icon-error {
  color: var(--mieweb-destructive);
}

.toast-message {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--mieweb-foreground);
}

/* ============================================
   Scroll to Top Button
   ============================================ */

.scroll-to-top {
  position: fixed;
  bottom: 1.5rem;
  right: 1.5rem;
  z-index: 50;
  display: none;
  height: 2.75rem;
  width: 2.75rem;
  align-items: center;
  justify-content: center;
  border-radius: 9999px;
  background-color: var(--mieweb-primary-600);
  color: white;
  box-shadow: var(--mieweb-shadow-dropdown, 0 4px 6px -1px rgb(0 0 0 / 0.1));
  transition: opacity 0.2s, transform 0.2s;
}

.scroll-to-top:hover {
  background-color: var(--mieweb-primary-700);
  transform: translateY(-2px);
}

.scroll-to-top.visible {
  display: flex;
}

/* ============================================
   Keyboard Shortcuts (kbd)
   ============================================ */

kbd {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 1.25rem;
  height: 1.25rem;
  padding: 0 0.375rem;
  font-family: var(--mieweb-font-mono);
  font-size: 0.6875rem;
  font-weight: 500;
  color: var(--mieweb-muted-foreground);
  background-color: var(--mieweb-muted);
  border: 1px solid var(--mieweb-border);
  border-radius: var(--mieweb-radius-sm, 0.25rem);
  box-shadow: 0 1px 0 var(--mieweb-border);
}

/* ============================================
   Skip Link (Accessibility)
   ============================================ */

.skip-link {
  position: absolute;
  top: -40px;
  left: 0;
  background: var(--mieweb-primary-600);
  color: white;
  padding: 0.5rem 1rem;
  z-index: 100;
  border-radius: 0 0 var(--mieweb-radius-md, 0.375rem) 0;
}

.skip-link:focus {
  top: 0;
}

/* ============================================
   Animations
   ============================================ */

@keyframes fade-in {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slide-up {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in {
  animation: fade-in 0.2s ease;
}

.animate-slide-up {
  animation: slide-up 0.3s ease;
}

/* ============================================
   Loading States (Skeleton)
   ============================================ */

.skeleton {
  background: linear-gradient(
    90deg,
    var(--mieweb-muted) 25%,
    color-mix(in srgb, var(--mieweb-muted) 50%, var(--mieweb-border)) 50%,
    var(--mieweb-muted) 75%
  );
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s infinite;
  border-radius: var(--mieweb-radius-md, 0.375rem);
}

@keyframes skeleton-loading {
  0% { background-position: 200% 0; }
  100% { background-position: -200% 0; }
}

/* ============================================
   Print Styles
   ============================================ */

@media print {
  .no-print,
  header,
  aside,
  #sidebar,
  #sidebar-overlay,
  .scroll-to-top,
  .footer-cta,
  .page-actions,
  #search-modal,
  #feedback-modal {
    display: none !important;
  }

  #main-content {
    margin-left: 0 !important;
  }

  .prose {
    max-width: 100% !important;
  }

  a[href]:after {
    content: " (" attr(href) ")";
    font-size: 0.8em;
    color: #666;
  }
}
